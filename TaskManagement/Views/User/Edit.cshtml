@model TaskManagement.Models.UsersDTO
@{
    ViewData["Title"] = "Edit User";
}

<div class="row mt-2">
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <h5 class="float-start text-black">Edit User</h5>
                <a class="btn btn-primary fs-14 d-flex align-items-center btn-pd" href="@Url.Action("Index","User")">
                    <i class="fa fa-arrow-left me-1"></i> Back To List
                </a>
            </div>

            <div class="col-md-12 mt-3">
                <form asp-action="Edits" asp-controller="User" method="post">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="@Model.Firstname"></label> <span class="text-danger">*</span>
                            <input type="text" class="form-control" asp-for="@Model.Firstname" placeholder="First name">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="@Model.Lastname"></label>
                            <input type="text" class="form-control" asp-for="@Model.Lastname" placeholder="Last name">
                        </div>
                    </div>
                    <input type="hidden" hidden="hidden" asp-for="Id"/>

                    <button type="submit" class="btn btn-success mt-4"><i class="fas fa-save"></i> Save</button>
                </form>
            </div>
        </div>
    </div>

</div>